---
import type { Experience } from '@/i18n/cv';

interface Props {
  experience: Experience;
}

const { currentLocale } = Astro;

const { experience } = Astro.props;
const { name, company, companyUrl, startDate, endDate, summary } = experience;

const startDateFormatted = new Date(startDate).toLocaleDateString(currentLocale, { month: 'long', year: 'numeric' });
const endDateFormatted = endDate && new Date(endDate).toLocaleDateString(currentLocale, { month: 'long', year: 'numeric' });
---

<article>
  <!-- Bullet -->
  <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-2 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>

  <div class="relative start-4 pr-4 md:start-6 md:pr-6">
    <!-- Company && Date -->
    <header class="flex flex-row justify-between items-center">
      <h3 class:list={["text-md font-semibold text-gray-900 dark:text-white",
        {
          'hover:underline hover:underline-offset-2': companyUrl,
        }
      ]}>
        <a href={ companyUrl } target="_blank">
          { company }
        </a>
      </h3>
      <time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">
        { startDateFormatted } { endDateFormatted && ` - ${endDateFormatted}` }
      </time>
    </header>

    <!-- Experience title -->
    <p class="block mt-1 mb-4 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">
      { name }
    </p>
    <!-- Experience description -->
    <p class="mb-4 font-normal text-gray-500 dark:text-gray-400">
      { summary }
    </p>
  </div>
</article>


