  /* Dark-variants */
  --veryLightBlue: #374151;
  --darkBlue: #1c2431;

  /* Light-variantss */
  --veryLightGray: #ececec;
  --lightGray: #9ca3af;
  --darkGray: #666;
  --veryDarkGray: #1f2937;
